{
  "name": "eslint-progress-bar",
  "version": "1.0.0",
  "description": "Finally see what ESLint is doing. A simple progress bar for your linting.",
  "type": "module",
  "bin": {
    "eslint-progress-bar": "./bin/eslint-progress-bar.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "eslint",
    "progress",
    "progress-bar",
    "cli",
    "lint",
    "linter",
    "dx",
    "developer-experience"
  ],
  "author": "zwyk-studio",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zwyk-studio/eslint-progress-bar.git"
  },
  "bugs": {
    "url": "https://github.com/zwyk-studio/eslint-progress-bar/issues"
  },
  "homepage": "https://github.com/zwyk-studio/eslint-progress-bar#readme",
  "engines": {
    "node": ">=18"
  },
  "peerDependencies": {
    "eslint": ">=8.0.0"
  },
  "dependencies": {
    "cli-progress": "^3.12.0",
    "globby": "^16.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/cli-progress": "^3.11.6",
    "@types/node": "^25.0.3",
    "eslint": "^9.39.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
